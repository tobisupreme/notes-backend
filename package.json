    "deploy:full": "npm run build:ui && npm run deploy",
    "logs:prod": "fly logs",
    "lint": "eslint ."
  },
  "keywords": [
    "express",
    "beginner"
  ],
  "author": "tobisupreme",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.24.0",
    "jest": "^29.1.2",
    "nodemon": "^2.0.19",
    "supertest": "^6.3.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "mongoose": "^6.6.1"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
